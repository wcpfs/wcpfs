server {
    listen       80;
    server_name  windycitypathfinder.com;
    return       301 http://www.windycitypathfinder.com$request_uri;
}

server {
        listen   80;
        server_name  www.windycitypathfinder.com;
        client_max_body_size 25M;
        client_body_buffer_size 128k;

        access_log  /var/log/nginx/access.log;

        location @sinatra {
                proxy_pass      http://127.0.0.1:8080;
		proxy_redirect          off;
		proxy_set_header        Host            $host;
		proxy_set_header        X-Real-IP       $remote_addr;
		proxy_set_header        X-Forwarded-For $proxy_add_x_forwarded_for;
        }

	location ~* \.(php)$ {
	    rewrite ^(.*) http://forums.windycitypathfinder.com$1 permanent;
	}

	location / {
		root /home/ubuntu/apps/wcpfs/public;
		try_files $uri $uri/ index.html @sinatra;
	}
}
